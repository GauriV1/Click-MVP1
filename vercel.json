{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/grok.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/grok",
      "dest": "/api/grok.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 